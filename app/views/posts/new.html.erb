<h1>新規投稿</h1>

<%= form_with model: @post, local: true do |f| %>
  <div>
    <%= f.label :genre_id, "ジャンル" %><br>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
  </div>

  <div>
    <%= f.label :content, "内容" %><br>
    <%= f.text_area :content %>
  </div>

  <%= f.submit "投稿する", class: "btn btn-primary" %>
<% end %>
