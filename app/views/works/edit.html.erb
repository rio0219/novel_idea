<h2>基本設定</h2>

<%= form_with model: @work, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :genre %><br>
    <%= f.collection_select :genre, @genres, :id, :name, prompt: "ジャンルを選択してください" %>
  </div>

  <div>
    <%= f.label :theme %><br>
    <%= f.text_field :theme %>
  </div>

  <div>
    <%= f.label :synopsis %><br>
    <%= f.text_area :synopsis %>
  </div>

  <div>
    <%= f.submit nil, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
