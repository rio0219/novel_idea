<%= form_with(model: @work) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "ジャンルを選択してください" %>
  </div>

  <div>
    <%= f.label :theme, "テーマ" %>
    <%= f.text_field :theme %>
  </div>

  <div>
    <%= f.label :synopsis, "あらすじ" %>
    <%= f.text_area :synopsis %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
