<%= form_with(model: @work, local: true) do |f| %>
  <% if @work.errors.any? %>
    <div id="error_explanation" class="bg-red-100 text-red-800 p-3 rounded mb-4">
      <h2><%= pluralize(@work.errors.count, "件のエラー") %>が発生しました:</h2>
      <ul class="list-disc pl-5">
        <% @work.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
   <%= f.label :genre_id %><br>
   <%= f.collection_select :genre_id, @genres, :id, :name %>
  </div>

  <div>
    <%= f.label :theme %><br>
    <%= f.text_field :theme %>
  </div>

  <div>
    <%= f.label :synopsis %><br>
    <%= f.text_area :synopsis %>
  </div>
