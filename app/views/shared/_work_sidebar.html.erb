<div class="w-64 bg-gray-100 min-h-screen p-4">
  <h3 class="text-lg font-semibold mb-4"><%= t("activerecord.models.work") %></h3>

  <ul class="space-y-2">
    <!-- 基本設定 -->
    <li class="text-center">
      <%= link_to (@work&.persisted? ? edit_work_path(@work) : new_work_path),
                class: "block px-3 py-2 rounded hover:bg-gray-200" do %>
        <%= image_tag "kihon_icon.PNG", alt: "基本設定アイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
        <span><%= t("titles.work") %></span>
      <% end %>
    </li>

    <!-- キャラクター -->
    <li class="text-center">
      <% if @work&.persisted? %>
        <%= link_to work_characters_path(@work), class: "block px-3 py-2 rounded hover:bg-gray-200" do %>
          <%= image_tag "character_icon.PNG", alt: "キャラクターアイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
          <span><%= t("activerecord.models.character") %></span>
        <% end %>
      <% else %>
        <div class="block px-3 py-2 text-gray-400 cursor-not-allowed text-center">
          <%= image_tag "character_icon.PNG", alt: "キャラクターアイコン（無効）", class: "mx-auto w-[90px] h-[90px] mb-1 opacity-50" %>
          <span><%= t("activerecord.models.character") %></span>
        </div>
      <% end %>
    </li>

    <!-- 世界観 -->
    <li class="text-center">
      <% if @work&.persisted? %>
        <% if @work.worldview.present? %>
          <%= link_to edit_work_worldview_path(@work), class: "block px-3 py-2 rounded hover:bg-gray-200" do %>
            <%= image_tag "world_icon.PNG", alt: "世界観アイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
            <span><%= t("activerecord.models.worldview") %></span>
          <% end %>
        <% else %>
          <%= link_to new_work_worldview_path(@work), class: "block hover:bg-gray-100 rounded-lg p-2" do %>
            <%= image_tag "world_icon.PNG", alt: "世界観アイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
            <span><%= t("activerecord.models.worldview") %></span>
          <% end %>
        <% end %>
      <% else %>
        <div class="opacity-50 cursor-not-allowed">
          <%= image_tag "world_icon.PNG", alt: "世界観アイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
          <span><%= t("activerecord.models.worldview") %></span>
        </div>
      <% end %>
    </li>
  
    <!-- プロット -->
    <li class="text-center">
      <% if @work&.persisted? %>
        <%= link_to work_plots_path(@work), class: "block hover:bg-gray-100 rounded-lg p-2" do %>
          <%= image_tag "plot_icon.PNG", alt: "プロットアイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
          <span><%= t("activerecord.models.plot") %></span>
        <% end %>
      <% else %>
        <div class="opacity-50 cursor-not-allowed">
          <%= image_tag "plot_icon.PNG", alt: "プロットアイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
          <span><%= t("activerecord.models.plot") %></span>
        </div>
      <% end %>
    </li>
  
    <!-- AI相談 -->
    <li class="text-center">
      <%= link_to ai_consultations_path(return_to: request.fullpath), class: "block hover:bg-gray-100 rounded-lg p-2" do %>
        <%= image_tag "ai_icon.PNG", alt: "AI相談アイコン", class: "mx-auto w-[90px] h-[90px] mb-1" %>
        <span><%= t("activerecord.models.ai_consultation") %></span>
      <% end %>
    </li>
  </ul>
</div>
