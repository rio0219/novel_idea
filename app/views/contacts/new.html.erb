<div class="min-h-screen flex items-center justify-center bg-softOrange py-10">
  <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-lg">

    <!-- タイトル -->
    <h1 class="text-2xl sm:text-3xl font-bold text-deepNavy mb-6 text-center">
      お問い合わせ
    </h1>

    <%= form_with model: @contact, local: true do |f| %>

      <!-- 名前 -->
      <div class="mb-4">
        <%= f.label :name, "お名前", class: "block text-sm font-medium text-deepNavy mb-1" %>
        <%= f.text_field :name,
              class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-300 focus:border-blue-400" %>
      </div>

      <!-- メール -->
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-deepNavy mb-1" %>
        <%= f.email_field :email,
              class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-300 focus:border-blue-400" %>
      </div>

      <!-- お問い合わせ内容 -->
      <div class="mb-6">
        <%= f.label :message, "お問い合わせ内容", class: "block text-sm font-medium text-deepNavy mb-1" %>
        <%= f.text_area :message,
              rows: 5,
              class: "w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-300 focus:border-blue-400" %>
      </div>

      <!-- 送信ボタン -->
      <%= f.submit "送信する",
            class: "w-full bg-deepNavy text-white py-2 rounded-lg font-semibold hover:bg-blue-800 transition" %>
    <% end %>

  </div>
</div>
