<div class="p-6 bg-beige-50 rounded-xl">
  <div class="flex items-center space-x-4">
    <!-- 簡易アイコン -->
    <%= link_to user_path(@user) do %>
      <div class="w-16 h-16 flex items-center justify-center rounded-full bg-beige-200 text-xl font-bold">
        <%= @user.initial_icon %>
      </div>
    <% end %>

    <!-- 名前と自己紹介 -->
    <div>
      <h2 class="text-lg font-bold"><%= @user.display_name %></h2>
      <p class="text-gray-600"><%= @user.bio.presence || "自己紹介はまだありません" %></p>

      <!-- 編集ボタン（自分のプロフィールのみ表示） -->
      <% if current_user == @user %>
        <%= link_to "プロフィールを編集", edit_user_path(@user), class: "mt-2 inline-block text-sm text-blue-600 hover:underline" %>
      <% end %>
    </div>
  </div>

  <!-- 投稿一覧 -->
  <h3 class="mt-6 font-semibold">投稿したアイデア</h3>
  <ul class="mt-2 space-y-2">
    <% @posts.each do |post| %>
      <li class="p-3 border rounded-lg bg-white shadow-sm">
        <%= truncate(post.content, length: 40) %>
        <!-- コメント機能実装後にリンクを戻す -->
        <!-- <%= link_to truncate(post.content, length: 40), post_path(post), class: "text-blue-600 hover:underline" %> -->
      </li>
    <% end %>
  </ul>
</div>

