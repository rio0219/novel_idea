<div class="max-w-3xl mx-auto mt-12 p-8 bg-cream-50 rounded-2xl shadow-md text-center">

  <!-- タイトル -->
  <h2 class="text-3xl font-bold text-blue-900 mb-8">
    <%= t("devise.passwords.edit.title") %>
  </h2>

  <!-- フォーム -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :put, data: { turbo: false } }) do |f| %>

    <%= f.hidden_field :reset_password_token %>

    <!-- 新しいパスワード -->
    <div class="text-left mb-6">
      <%= f.label :password, t("devise.passwords.edit.new_password"),
            class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-blue-300 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <!-- 新しいパスワード（確認） -->
    <div class="text-left mb-8">
      <%= f.label :password_confirmation, t("devise.passwords.edit.password_confirmation"),
            class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-blue-300 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <!-- 変更ボタン -->
    <div>
      <%= f.submit t("devise.passwords.edit.change_password"),
            class: "px-8 py-3 bg-blue-600 text-white font-semibold rounded-full shadow hover:bg-blue-700 transition" %>
    </div>

  <% end %>

  <!-- 下部リンク -->
  <div class="mt-8 text-blue-900">
    <%= render "devise/shared/links" %>
  </div>

</div>
