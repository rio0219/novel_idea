<h2><%= t("devise.passwords.edit.title") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div>
    <%= f.label :password, t("devise.passwords.edit.new_password") %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, t("devise.passwords.edit.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.submit t("devise.passwords.edit.change_password") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
