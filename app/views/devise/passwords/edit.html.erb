<div class="max-w-3xl mx-auto mt-12 p-8 bg-white rounded-2xl shadow-lg border border-gray-200 text-center">

  <!-- タイトル -->
  <h2 class="text-3xl font-bold text-blue-900 mb-8">
    <%= t("devise.passwords.edit.title") %>
  </h2>

  <% if resource.errors.any? %>
    <div class="bg-red-100 text-red-700 border border-red-300 p-4 rounded mb-6">
      <h3 class="font-bold mb-2">エラーが発生しました</h3>
      <ul class="list-disc pl-5">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- フォーム -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :put, data: { turbo: false } }) do |f| %>

    <%= f.hidden_field :reset_password_token %>

    <!-- 新しいパスワード -->
    <div class="text-left mb-6">
      <%= f.label :password, t("devise.passwords.edit.new_password"),
            class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password,
            autofocus: true,
            autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-blue-300 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <!-- 新しいパスワード確認 -->
    <div class="text-left mb-8">
      <%= f.label :password_confirmation, t("devise.passwords.edit.password_confirmation"),
            class: "block text-gray-700 font-medium mb-2" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-blue-300 rounded-lg focus:ring focus:ring-blue-200 focus:outline-none" %>
    </div>

    <!-- 変更ボタン -->
    <div>
      <%= f.submit t("devise.passwords.edit.change_password"),
            class: "px-8 py-3 bg-blue-600 text-white font-semibold rounded-full shadow hover:bg-blue-700 transition" %>
    </div>

  <% end %>

  <!-- ★ 下部リンク（横並びバージョン） -->
  <div class="mt-10">
    <div class="flex justify-center gap-6 text-blue-900 text-sm font-medium">

      <%# ログイン %>
      <%= link_to t("devise.shared.links.sign_in"),
          new_session_path(resource_name),
          class: "hover:underline" %>

      <%# 新規登録（可能な場合） %>
      <% if devise_mapping.registerable? %>
        <%= link_to t("devise.shared.links.sign_up"),
            new_registration_path(resource_name),
            class: "hover:underline" %>
      <% end %>

    </div>
  </div>

</div>
