<div class="min-h-screen flex items-center justify-center bg-cream-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-300">
    <h2 class="text-2xl font-bold text-[#002776] mb-8"><%= t('devise.sessions.new.sign_in') %></h2>

    <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
      <div class="mb-6 text-left">
        <%= f.label :email, t('devise.sessions.new.email'), class: "block text-[#002776] font-semibold mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#002776]" %>
      </div>

      <div class="mb-6 text-left">
        <%= f.label :password, t('devise.sessions.new.password'), class: "block text-[#002776] font-semibold mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#002776]" %>
      </div>

      <div class="flex items-center justify-between mb-8">
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2 accent-[#002776]" %>
          <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "text-[#002776] text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit t('devise.sessions.new.sign_in_button'),
              class: "w-full bg-[#002776] text-white py-2 rounded-lg font-semibold hover:bg-[#1a3b8a] transition" %>
      </div>
    <% end %>

    <div class="mt-6 flex justify-between text-sm text-[#002776]">
      <%= link_to t('devise.shared.links.sign_up'), new_registration_path(resource_name), class: "hover:underline" %>
      <%# パスワードリセットは本リリース後に実装予定 %>
      <%#= link_to t('devise.shared.links.forgot_your_password'), new_password_path(resource_name), class: "hover:underline" %>
    </div>
  </div>
</div>
