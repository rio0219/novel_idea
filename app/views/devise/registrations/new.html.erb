<div class="min-h-screen flex items-center justify-center bg-cream-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md border border-gray-300">
    <h2 class="text-2xl font-bold text-blue-900 mb-6 text-center">
      <%= t("devise.registrations.new.sign_up") %>
    </h2>

    <% if resource.errors.any? %>
      <div class="bg-red-100 text-red-700 border border-red-300 p-4 rounded mb-4">
        <h3 class="font-bold mb-2">エラーが発生しました</h3>
        <ul class="list-disc pl-5">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: { class: "space-y-5", data: { turbo: "false" } }) do |f| %>
      <!-- メールアドレス -->
      <div>
        <%= f.label :email, t("devise.registrations.new.email"), class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- パスワード -->
      <div>
        <%= f.label :password, t("devise.registrations.new.password"), class: "block text-gray-700 font-medium mb-1" %>
        <% if @minimum_password_length %>
          <p class="text-sm text-gray-500 mb-1">
            (<%= t("devise.registrations.new.minimum_characters", count: @minimum_password_length) %>)
          </p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- パスワード確認 -->
      <div>
        <%= f.label :password_confirmation, t("devise.registrations.new.password_confirmation"), class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
      </div>

      <!-- 登録ボタン -->
      <div class="text-center">
        <%= f.submit t("devise.registrations.new.sign_up"),
              class: "bg-blue-700 hover:bg-blue-800 text-white font-semibold py-2 px-4 rounded w-full shadow transition duration-200 flex items-center justify-center" %>
      </div>
    <% end %>
  
        <!-- Googleログイン -->
    <div class="text-center mt-4">
      <%= link_to user_google_oauth2_omniauth_authorize_path,
            class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded w-full inline-flex items-center justify-center shadow" do %>
        <%= image_tag "google_icon.png", alt: "Google", class: "w-5 h-5 mr-2" %>
        Googleでログイン
      <% end %>
    </div>

    <!-- 下部リンク -->
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
