<h2><%= t("devise.registrations.edit.title") %></h2>

<%= form_for(resource, as: resource_name,
      url: password_path(resource_name),
      html: { method: :post, data: { turbo: "false" } }) do |f| %
  <div>
    <%= f.label :email, t("devise.registrations.edit.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password, t("devise.registrations.edit.password") %> <i>(<%= t("devise.registrations.edit.leave_blank") %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation, t("devise.registrations.edit.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :current_password, t("devise.registrations.edit.current_password") %> <i>(<%= t("devise.registrations.edit.need_current") %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div>
    <%= f.submit t("devise.registrations.edit.update") %>
  </div>
<% end %>

<h3><%= t("devise.registrations.edit.cancel_account") %></h3>
<p><%= t("devise.registrations.edit.cancel_account_text") %></p>

<%= button_to t("devise.registrations.edit.cancel_account_btn"),
              registration_path(resource_name),
              data: { confirm: t("devise.registrations.edit.confirm_cancel") },
              method: :delete %>
