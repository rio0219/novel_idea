<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "TSUMUGIBA" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Tailwind CSS を読み込み -->
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= favicon_link_tag 'favicon.ico' %>

    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body class="bg-softOrange text-deepNavy font-sans">
    <!-- ヘッダー -->
    <header class="bg-white shadow p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <!-- ロゴ / サイト名 -->
        <h1 class="text-xl font-bold">
          <%= link_to "TSUMUGIBA", root_path, class: "hover:text-blue-500" %>
        </h1>

        <!-- ナビゲーションリンク -->
        <ul class="flex space-x-4">
          <li>
            <%= link_to works_path do %>
              <%= image_tag "home.PNG", alt: "Home", class: "w-7 h-7 hover:opacity-70" %>
            <% end %>
          </li>


          <% if user_signed_in? %>
            <li class="text-gray-600">ログイン中: <%= current_user.email %></li>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "hover:text-blue-500" %>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path, class: "hover:text-blue-500" %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: "hover:text-blue-500" %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <div class="flex">
    <!-- ナビゲーションリンク -->
    <aside class="w-64 h-screen bg-white shadow-lg p-4 flex flex-col items-center">
      <h2 class="text-xl font-bold mb-6 text-blue-900">みんなのアイデア投稿</h2>
    
      <nav class="space-y-8 text-center">
        <% if user_signed_in? %>
          <!-- マイページ -->
          <%= link_to user_path(current_user), class: "block hover:opacity-80 transition" do %>
            <%= image_tag "mypage_icon.PNG", alt: "マイページ", class: "mx-auto w-[90px] h-[90px] mb-2" %>
            <p class="text-blue-900"><%= t("buttons.mypage") %></p>
          <% end %>
        <% end %>
    
        <% if user_signed_in? %>
          <!-- 新規投稿 -->
          <%= link_to new_post_path, class: "block hover:opacity-80 transition" do %>
            <%= image_tag "newpost_icon.PNG", alt: "新規投稿", class: "mx-auto w-[90px] h-[90px] mb-2" %>
            <p class="text-blue-900"><%= t("buttons.new") %></p>
          <% end %>
        <% else %>
          <!-- ログインしていない場合 -->
          <%= link_to new_user_session_path, class: "block hover:opacity-80 transition" do %>
            <%= image_tag "newpost_icon.PNG", alt: "新規投稿（未ログイン）", class: "mx-auto w-[90px] h-[90px] mb-2 opacity-50" %>
            <p class="text-gray-400"><%= t("buttons.new_notlogin") %></p>
          <% end %>
        <% end %>
    
        <!-- 投稿一覧 -->
        <%= link_to posts_path, class: "block hover:opacity-80 transition" do %>
          <%= image_tag "list_icon.PNG", alt: "投稿一覧", class: "mx-auto w-[90px] h-[90px] mb-2" %>
          <p class="text-blue-900"><%= t("buttons.idea_list") %></p>
        <% end %>
      </nav>
    </aside>

      <!-- メインコンテンツ -->
      <main class="flex-1 container mx-auto p-4">
        <% if notice %>
          <p class="bg-green-100 text-green-800 p-2 rounded mb-2"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="bg-red-100 text-red-800 p-2 rounded mb-2"><%= alert %></p>
        <% end %>

        <%= yield %>
      </main>
    </div>

    <!-- フッター -->
    <footer class="bg-white shadow p-4 mt-10 text-center text-gray-500">
      &copy; 2025 TSUMUGIBA
    </footer>
  </body>
</html>
