<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "TSUMUGIBA" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Tailwind CSS を読み込み -->
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <%= favicon_link_tag 'favicon.ico' %>
    <%= display_meta_tags(default_meta_tags) %>
  </head>

  <body class="bg-softOrange text-deepNavy font-sans">
    <!-- ヘッダー -->
    <header class="bg-white shadow p-4">
      <nav class="container mx-auto flex flex-col sm:flex-row justify-between items-center space-y-2 sm:space-y-0">
        <!-- ロゴ / サイト名 -->
        <h1 class="text-lg sm:text-xl font-bold">
          <%= link_to "TSUMUGIBA", root_path, class: "hover:text-blue-500" %>
        </h1>

        <!-- ナビゲーションリンク -->
        <ul class="flex flex-wrap justify-center sm:justify-end items-center space-x-3 sm:space-x-4 text-sm sm:text-base">
          <li>
            <%= link_to works_path do %>
              <%= image_tag "home.PNG", alt: "Home", class: "w-5 h-5 sm:w-7 sm:h-7 hover:opacity-70" %>
            <% end %>
          </li>

          <% if user_signed_in? %>
            <li class="text-gray-600 text-xs sm:text-sm break-all">
              ログイン中: <%= current_user.email %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: { turbo: false }, class: "hover:text-blue-500 text-xs sm:text-sm" %>
            </li>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path, class: "hover:text-blue-500 text-xs sm:text-sm" %></li>
            <li><%= link_to "新規登録", new_user_registration_path, class: "hover:text-blue-500 text-xs sm:text-sm" %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <!-- コンテンツ全体 -->
    <div class="flex flex-col sm:flex-row">
      <!-- サイドバー -->
      <aside class="bg-gray-100 p-3 sm:p-4 sm:w-64 sm:min-h-screen shadow-sm">
        <h2 class="text-base sm:text-lg font-semibold mb-3 sm:mb-5 text-center text-blue-900">
          みんなのアイデア投稿
        </h2>

        <ul class="flex flex-wrap justify-center gap-3 sm:block sm:space-y-3 text-center">
          <% if user_signed_in? %>
            <!-- マイページ -->
            <li class="text-center w-1/3 sm:w-auto">
              <%= link_to user_path(current_user), class: "block px-2 py-1 rounded hover:bg-gray-200" do %>
                <%= image_tag "mypage_icon.PNG", alt: "マイページ", class: "mx-auto w-16 h-16 sm:w-20 sm:h-20 lg:w-[90px] lg:h-[90px] mb-1" %>
                <span class="text-xs sm:text-sm"><%= t("buttons.mypage") %></span>
              <% end %>
            </li>
          <% end %>

          <% if user_signed_in? %>
            <!-- 新規投稿 -->
            <li class="text-center w-1/3 sm:w-auto">
              <%= link_to new_post_path, class: "block px-2 py-1 rounded hover:bg-gray-200" do %>
                <%= image_tag "newpost_icon.PNG", alt: "新規投稿", class: "mx-auto w-16 h-16 sm:w-20 sm:h-20 lg:w-[90px] lg:h-[90px] mb-1" %>
                <span class="text-xs sm:text-sm"><%= t("buttons.new") %></span>
              <% end %>
            </li>
          <% else %>
            <!-- 未ログイン時 -->
            <li class="text-center w-1/3 sm:w-auto opacity-60 cursor-not-allowed">
              <%= image_tag "newpost_icon.PNG", alt: "新規投稿（未ログイン）", class: "mx-auto w-16 h-16 sm:w-20 sm:h-20 lg:w-[90px] lg:h-[90px] mb-1" %>
              <span class="text-xs sm:text-sm text-gray-400"><%= t("buttons.new_notlogin") %></span>
            </li>
          <% end %>

          <!-- 投稿一覧 -->
          <li class="text-center w-1/3 sm:w-auto">
            <%= link_to posts_path, class: "block px-2 py-1 rounded hover:bg-gray-200" do %>
              <%= image_tag "list_icon.PNG", alt: "投稿一覧", class: "mx-auto w-16 h-16 sm:w-20 sm:h-20 lg:w-[90px] lg:h-[90px] mb-1" %>
              <span class="text-xs sm:text-sm"><%= t("buttons.idea_list") %></span>
            <% end %>
          </li>

          <!-- 検索 -->
          <li class="text-center w-1/3 sm:w-auto">
            <%= link_to search_posts_path, class: "block px-2 py-1 rounded hover:bg-gray-200" do %>
              <%= image_tag "search_icon.PNG", alt: "検索", class: "mx-auto w-16 h-16 sm:w-20 sm:h-20 lg:w-[90px] lg:h-[90px] mb-1" %>
              <span class="text-xs sm:text-sm">検索</span>
            <% end %>
          </li>
        </ul>
      </aside>

      <!-- メインコンテンツ -->
      <main class="flex-1 container mx-auto p-4">
        <% if notice %>
          <p class="bg-green-100 text-green-800 p-2 rounded mb-2"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="bg-red-100 text-red-800 p-2 rounded mb-2"><%= alert %></p>
        <% end %>

        <%= yield %>
      </main>
    </div>

    <!-- フッター -->
    <footer class="bg-white shadow p-4 mt-10 text-center text-gray-500 text-sm">
      &copy; 2025 TSUMUGIBA
    </footer>
  </body>
</html>
