<!-- app/views/characters/index.html.erb -->
<h2 class="text-2xl font-bold mb-6"><%= t("titles.character_list") %></h2>

<div class="actions mb-4">
  <%= link_to t("buttons.new"), new_work_character_path(@work), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
</div>

<% if @characters.any? %>
  <% @characters.each do |character| %>
    <div class="flex justify-between items-center border-b py-2">
      <span><%= character.name %></span>
      <div class="flex space-x-2">
        <%= link_to t("buttons.edit"), edit_work_character_path(@work, character), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
        <%= link_to t("buttons.destroy"), work_character_path(@work, character), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "px-4 py-1 bg-red-600 text-white rounded hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>まだキャラクターが登録されていません</p>
<% end %>
