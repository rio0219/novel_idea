<h2>キャラクター編集</h2>

<%= form_with model: [@work, @character], local: true do |f| %>
  <% if @character.errors.any? %>
    <div class="bg-red-100 text-red-800 p-3 rounded mb-4">
      <h3><%= pluralize(@character.errors.count, "件のエラー") %>が発生しました:</h3>
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>

  <div>
    <%= f.label :gender %><br>
    <%= f.text_field :gender %>
  </div>

  <div>
    <%= f.label :hair_color %><br>
    <%= f.text_field :hair_color %>
  </div>

  <div>
    <%= f.label :eye_color %><br>
    <%= f.text_field :eye_color %>
  </div>

  <div>
    <%= f.label :physique %><br>
    <%= f.text_field :physique %>
  </div>

  <div>
    <%= f.label :other %><br>
    <%= f.text_area :other %>
  </div>

  <div>
    <%= f.label :personality %><br>
    <%= f.text_area :personality %>
  </div>

  <div>
    <%= f.label :background %><br>
    <%= f.text_area :background %>
  </div>

  <div class="mt-4">
    <%= f.submit nil, class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>
