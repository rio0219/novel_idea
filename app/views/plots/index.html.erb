<h2><%= t("plots.index.title") %></h2>

<div class="actions mb-4">
  <%= link_to t("buttons.new"), new_work_plot_path(@work), class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
</div>

<% if @plots.any? %>
  <% @plots.each do |plot| %>
    <div class="flex justify-between items-center border-b py-2">
      <span><%= plot.chapter_title %></span>
      <div class="flex space-x-2">
        <%= link_to t("buttons.edit"), edit_work_plot_path(@work, plot), class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
        <%= link_to t("buttons.destroy"), work_plot_path(@work, plot),
              method: :delete,
              data: { confirm: "削除しますか？" },
              class: "px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>プロットはまだ登録されていません</p>
<% end %>
